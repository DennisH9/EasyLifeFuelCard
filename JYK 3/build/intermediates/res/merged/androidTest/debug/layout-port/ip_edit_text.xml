<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_item_height_91"
    android:background="@drawable/system_settings_item"
    android:orientation="horizontal"   
    >
   
    <EditText
        android:id="@+id/et_ip_1"
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:background="@null"
        android:inputType="number"
        android:maxLength="3"
        android:singleLine="true"
        android:textColor="#333"
        android:textSize="@dimen/sp18" 
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_dot"
        android:textColor="#333" />

    <EditText
        android:id="@+id/et_ip_2"
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:background="@null"
        android:inputType="number"
        android:maxLength="3"
        android:singleLine="true"
        android:textColor="#333"
        android:textSize="@dimen/sp18" 
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_dot"
        android:textColor="#333" />

    <EditText
        android:id="@+id/et_ip_3"
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:background="@null"
        android:inputType="number"
        android:maxLength="3"
        android:singleLine="true"
        android:textColor="#333"
        android:textSize="@dimen/sp18" 
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_dot"
        android:textColor="#333" />

    <EditText
        android:id="@+id/et_ip_4"
        android:layout_width="@dimen/dp60"
        android:layout_height="match_parent"
        android:background="@null"
        android:inputType="number"
        android:maxLength="3"
        android:singleLine="true"
        android:textColor="#333"
        android:textSize="@dimen/sp18" 
        android:gravity="center"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/common_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <com.newland.payment.ui.view.SettingEditView
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height_91"
        	android:layout_marginTop="@dimen/setting_margin_top" />

        <com.newland.payment.ui.view.SettingEditView
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_item_height_91" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/commom_next"
            android:padding="@dimen/dp10"
            android:text="@string/common_leading_in"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />
        
    </LinearLayout>

    <com.newland.payment.ui.view.KeyboardNumber
        android:id="@+id/key_board_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />
</FrameLayout>
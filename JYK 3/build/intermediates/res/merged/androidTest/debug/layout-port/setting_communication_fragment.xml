<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg" 
    android:orientation="vertical">

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.newland.payment.ui.view.SettingEditView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_margin_top" />
            <com.newland.payment.ui.view.SettingSwitchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.newland.payment.ui.view.SettingChooseView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_cdma"
                style="@style/system_settings_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_91"
                android:text="@string/connect_type_cdma" />

            <TextView
                android:id="@+id/txt_gprs"
                style="@style/system_settings_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_91"
                android:text="@string/connect_type_gprs" />

            <TextView
                android:id="@+id/txt_wifi"
                style="@style/system_settings_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height_91"
                android:text="@string/connect_type_wifi" />
        </LinearLayout>
    </ScrollView>

    <com.newland.payment.ui.view.KeyboardNumber
        android:id="@+id/key_board_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone" />

</LinearLayout>
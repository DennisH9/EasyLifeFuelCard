<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/setting_item_height_91"
    android:background="@drawable/system_settings_item"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="@dimen/dp148"
            android:layout_height="match_parent"
            android:textColor="#333"
            android:textSize="@dimen/sp18" 
            android:paddingLeft="@dimen/dp14"
        android:gravity="center_vertical|left"
            android:singleLine="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#333"
            android:textSize="@dimen/sp18" 
        android:gravity="center_vertical|left"
            android:singleLine="true"
            android:layout_toRightOf="@+id/txt_title"
            android:layout_centerVertical="true"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/setting_right"
            android:layout_marginRight="@dimen/dp6" />
        
    </RelativeLayout>


</LinearLayout>
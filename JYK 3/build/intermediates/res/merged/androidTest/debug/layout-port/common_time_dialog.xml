<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="@dimen/dp330"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp16"
            android:text="@string/common_tip_title"
            android:textColor="#333"
            android:textSize="@dimen/sp24" />

        <com.newland.payment.ui.view.wheelview.TimeWheelView
            android:id="@+id/time_wheel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp18"
            android:scaleType="fitXY"
            android:src="@drawable/common_dialog_horizontal_line"
            android:layout_marginLeft="@dimen/dp1"
            android:layout_marginRight="@dimen/dp1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50" >

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textColor="#1173d1"
                android:textSize="@dimen/sp22" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/common_dialog_vertical_line" 
                android:layout_marginBottom="@dimen/dp1"/>

            <TextView
                android:id="@+id/txt_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/common_sure"
                android:textColor="#1173d1"
                android:textSize="@dimen/sp22" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
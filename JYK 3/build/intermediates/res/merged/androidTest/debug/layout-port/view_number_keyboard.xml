<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="#d4d7dB">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp">
        <TextView
            android:id="@+id/tv_num_1"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:text="1"/>

        <TextView
            android:id="@+id/tv_num_2"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:text="2"/>

        <TextView
            android:id="@+id/tv_num_3"
            style="@style/NumberKeyboard"
            android:layout_marginLeft="0.5dp"
            android:text="3"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp"
        android:layout_marginBottom="0.5dp">
        <TextView
            android:id="@+id/tv_num_4"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:text="4"/>

        <TextView
            android:id="@+id/tv_num_5"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:text="5"/>

        <TextView
            android:id="@+id/tv_num_6"
            style="@style/NumberKeyboard"
            android:layout_marginLeft="0.5dp"
            android:text="6"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0.5dp"
        android:layout_marginTop="0.5dp">
        <TextView
            android:id="@+id/tv_num_7"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:text="7"/>

        <TextView
            android:id="@+id/tv_num_8"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:text="8"/>

        <TextView
            android:id="@+id/tv_num_9"
            style="@style/NumberKeyboard"
            android:layout_marginLeft="0.5dp"
            android:text="9"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.5dp">
        <TextView
            style="@style/NumberKeyboard"
            android:background="@android:color/transparent"
            android:layout_marginRight="0.5dp"/>

        <TextView
            android:id="@+id/tv_num_0"
            style="@style/NumberKeyboard"
            android:layout_marginRight="0.5dp"
            android:layout_marginLeft="0.5dp"
            android:text="0"/>

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="0.5dp"
            android:src="@drawable/ic_delete"/>
    </TableRow>

</TableLayout>
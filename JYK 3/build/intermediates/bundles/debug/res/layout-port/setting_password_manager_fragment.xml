<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/common_bg">
    
    
     <TextView
    android:id="@+id/setting_sys_manager_password"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        	android:layout_marginTop="@dimen/setting_margin_top"
        android:text="@string/setting_password_system" />
     
     <TextView
    android:id="@+id/setting_sys_safe_password"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        android:text="@string/setting_password_safe" />
     
    

<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp0"
    android:layout_weight="1" 
    />

</LinearLayout>

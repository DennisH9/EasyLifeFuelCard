<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_bg" >

    <com.newland.payment.ui.view.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp100" />

    <com.newland.payment.ui.view.CheckView
        android:id="@+id/cv_print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loading_view"
        android:layout_centerHorizontal="true" 
        />

    <com.newland.payment.ui.view.CheckView
        android:id="@+id/cv_communication_port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_print"
        android:layout_centerHorizontal="true"
         />

    <com.newland.payment.ui.view.CheckView
        android:id="@+id/cv_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_communication_port"
        android:layout_centerHorizontal="true" 
        />

    <com.newland.payment.ui.view.CheckView
        android:id="@+id/cv_ic_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_keyboard"
        android:layout_centerHorizontal="true" 
        />
    
    <TextView 
        android:id="@+id/txt_retry"
        android:text="@string/test_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/launch_retry"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp14"
        android:layout_marginBottom="@dimen/dp36"
        android:gravity="center"
        />
	<TextView 
        android:id="@+id/txt_skip"
        android:text="@string/test_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/launch_retry"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp127"
        android:layout_marginBottom="@dimen/dp36"
        android:gravity="center"
        />
	<TextView 
        android:id="@+id/txt_retry"
        android:text="@string/test_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/launch_retry"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dp14"
        android:layout_marginBottom="@dimen/dp36"
        android:gravity="center"
        />

</RelativeLayout>
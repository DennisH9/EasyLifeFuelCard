<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="376dp"
        android:background="@drawable/bill_bg"
        android:paddingBottom="@dimen/dp30"
        android:stretchColumns="*" >

        <TableRow android:layout_marginTop="@dimen/dp17" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_merchant_name"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_merchant_name"
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp16" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_p1"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp16" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_p2"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp16" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_balance_before_load"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp17" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_balance_after_load"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp16" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/common_country_code"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="#ee5757"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp16" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_date"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp16" >

            <TextView
                android:layout_width="@dimen/dp110"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:paddingLeft="@dimen/dp36"
                android:text="@string/bill_act"
                android:textColor="#8a8a8a"
                android:textSize="@dimen/sp16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="#333"
                android:textSize="@dimen/sp16" />
        </TableRow>
    </TableLayout>

</LinearLayout>
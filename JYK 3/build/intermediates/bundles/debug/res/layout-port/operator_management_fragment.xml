<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/btnMainChanggePwd"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        android:layout_marginTop="@dimen/dp20"
        android:text="修改主管密码" />

    <TextView
        android:id="@+id/btnOperatorAdd"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        android:text="增加操作员" />

    <TextView
        android:id="@+id/btnOperatorDel"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        android:text="删除操作员" />

    <TextView
        android:id="@+id/btnOperatorSearch"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        android:text="查询操作员" />

    <TextView
        android:id="@+id/btnOperatorChangePwd"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        android:text="修改操作员密码" />

</LinearLayout>
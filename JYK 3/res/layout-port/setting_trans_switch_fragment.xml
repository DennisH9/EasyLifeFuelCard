        android:layout_height="@dimen/setting_item_height_91"
        android:text="@string/setting_trans_switch_ec" />

	<ImageView
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/dp1"
	    android:src="#d7d7d7"/>

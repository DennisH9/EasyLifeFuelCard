    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txt_setting_trans_switch_tradition"
        style="@style/system_settings_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_item_height_91"
        	android:layout_marginTop="@dimen/setting_margin_top"
        android:text="@string/setting_trans_switch_tradition" />
    
    <TextView
        android:id="@+id/txt_setting_trans_switch_ec"
        style="@style/system_settings_item"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp400"
        android:paddingLeft="@dimen/dp7"
        android:paddingRight="@dimen/dp7" />
    <LinearLayout
        android:id="@+id/slid_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:background="@drawable/slid_left" />

        <TextView
            android:layout_width="@dimen/dp122"
            android:layout_height="@dimen/dp22"
            android:gravity="center"
            android:singleLine="true"
            android:text="左右滑翻页"
            android:layout_marginLeft="10dp"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/dp16" />

        <ImageView
            android:layout_width="@dimen/dp22"
            android:layout_height="@dimen/dp22"
            android:layout_marginLeft="10dp"
            android:background="@drawable/slid_right" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_search_waters_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp4"
            android:drawableLeft="@drawable/trans_select_icon"
            android:drawablePadding="@dimen/dp28"
            android:gravity="center"
            android:text="@string/common_select_success"
            android:textColor="#f8b42c"
            android:textSize="@dimen/sp18" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp7"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_back_page"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp38"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_orange"
            android:gravity="center"
            android:text="@string/common_back_page"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/txt_print"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp38"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp14"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_orange"
            android:gravity="center"
            android:text="@string/common_print"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/txt_next_page"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp38"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/bg_corner_orange"
            android:gravity="center"
            android:text="@string/common_next_page"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

</LinearLayout>
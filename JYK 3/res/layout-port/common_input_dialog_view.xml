<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="@dimen/dp330"
        android:layout_height="wrap_content"
        android:background="@drawable/common_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:singleLine="true"
            android:text="@string/common_tip_title"
            android:textColor="#333"
            android:textSize="@dimen/sp16" />

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp5"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp26"
            android:layout_marginRight="@dimen/dp26"
            android:textColor="#5e5e5e"
            android:textSize="@dimen/sp12"
            android:background="#fff" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp1"
            android:layout_marginRight="@dimen/dp1"
            android:layout_marginTop="@dimen/dp12"
            android:scaleType="fitXY"
            android:src="@drawable/common_dialog_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50" >

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/common_sure"
                android:textColor="#1173d1"
                android:textSize="@dimen/sp14" />

            <ImageView
                android:id="@+id/iv_line"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp1"
                android:scaleType="fitXY"
                android:src="@drawable/common_dialog_vertical_line" />

            <TextView
                android:id="@+id/txt_middle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/common_sure"
                android:textColor="#1173d1"
                android:textSize="@dimen/sp14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_line_middle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp1"
                android:scaleType="fitXY"
                android:src="@drawable/common_dialog_vertical_line"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/common_cancel"
                android:textColor="#1173d1"
                android:textSize="@dimen/sp14" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
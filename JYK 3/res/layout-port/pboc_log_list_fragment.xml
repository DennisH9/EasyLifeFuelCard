<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:layout_width="wrap_content"
        android:layout_height="383dp"
        android:layout_marginTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp7"
        android:paddingRight="@dimen/dp7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp10"
        android:drawableLeft="@drawable/trans_select_icon"
        android:drawablePadding="@dimen/dp28"
        android:gravity="center"
        android:text="@string/common_select_success"
        android:textColor="#f8b42c"
        android:textSize="@dimen/sp18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_back_page"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp38"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/common_btn_blue"
            android:gravity="center"
            android:text="@string/common_back_page"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/txt_print"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp38"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/common_btn_blue"
            android:gravity="center"
            android:text="@string/common_print"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/txt_next_page"
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp38"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_weight="1"
            android:background="@drawable/common_btn_blue"
            android:gravity="center"
            android:text="@string/common_next_page"
            android:textColor="#fff"
            android:textSize="@dimen/sp18" />
    </LinearLayout>

</LinearLayout>
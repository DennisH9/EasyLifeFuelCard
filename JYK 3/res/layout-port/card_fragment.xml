<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_bg"
        android:orientation="vertical" 
        android:paddingLeft="@dimen/dp14"
        android:paddingRight="@dimen/dp14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/common_input_card_no"
            android:textColor="#333"
            android:textSize="@dimen/sp24" 
            android:layout_marginBottom="@dimen/dp17"
            android:layout_marginTop="@dimen/dp40"/>
        
        <TextView
            android:id="@+id/txt_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp32"
            android:layout_gravity="left"
            android:text="@string/swipe_card_amount"
            android:textColor="#333"
            android:textSize="@dimen/sp20" 
            android:layout_marginBottom="@dimen/dp17"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp33"
            android:background="@drawable/common_inputbox"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp24"
                android:text="@string/common_card_no"
                android:textColor="#333"
                android:textSize="@dimen/sp17" />

            <EditText
                android:id="@+id/et_card_no"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/common_input_card_no"
                android:numeric="integer"
                android:layout_marginLeft="@dimen/dp13" />
        </LinearLayout>


    </LinearLayout>

    <com.newland.payment.ui.view.KeyboardNumber
        android:id="@+id/key_board_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:visibility="gone"/>

</FrameLayout>
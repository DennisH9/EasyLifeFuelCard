        android:textColor="#333"
        android:textSize="@dimen/sp18"
        android:layout_gravity="left" />

	<com.newland.payment.ui.view.IpEditText
		android:layout_width="wrap_content"
	    android:layout_height="match_parent"/>
</LinearLayout>